@model IEnumerable<Customer> 
@*Add this because we used it on CustomerController*@
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 style="color:orange">Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary" style="background-color:orange">
                <i class="bi bi-plus-circle"></i> &nbsp; Apply Online
            </a>
        </div>
    </div>
    <h1>Search Customers by Status:</h1><br />
    <form asp-controller="Customer" asp-action="Search">
        <div class="input-group">
            @*    <label for="Loan_Application_Status">Loan Status</label><br /><br /> *@
            <input type="text" name="sStatus" placeholder="Search by Status">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>
<br />
<table class="table table-striped table-dark" id="myTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer Name</th>
            <th>Gross Salary</th>
            <th>Credit Score</th>
            <th>Purchase Price</th>
            <th>Created Date & Time</th>
            <th>Edit Button</th>
            <th>Delete Button</th>
            <th>Status Button</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Id
                </td>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.GrossSalary.ToString("C2")
                </td>
                <td>
                    @obj.CreditScore
                </td>
                <td>
                    @obj.PurchasePrice.ToString("C2")
                </td>
                <td>
                    @obj.CreatedDateTime
                </td>
                @*Edit Button*@
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Customer" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="background-color:black;width:fit-content;height:fit-content">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                </td>
                @*Delete Button*@
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="background-color:black;width:fit-content;height:fit-content">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
                @*Button to view status*@
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Customer" asp-action="Status" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="background-color:black;width:fit-content;height:fit-content">
                            <i class="bi bi-eye"></i>Status
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div >
    <a asp-action="DownloadExcel" class="btn btn-primary" style="background-color:orange">
        <i class="bi bi-download"></i> Download Excel
    </a>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

